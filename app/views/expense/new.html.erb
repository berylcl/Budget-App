<h1>Expense#new</h1>
<p>Find me in app/views/expense/new.html.erb</p>
<div >
  <div>
    <%= link_to "ðŸ”™ Back", expense_index_path(category_id: params[:category_id]), class: "back-btn-new btn btn-sm" %><br/>
  </div><br/>

  <%= form_with model: Expense, url: expense_index_path, data: { turbo: false } do |f| %>
    <div class="field form-group">
      <%= f.text_field :name, class: "form-control", autofocus: true, placeholder: "Expense", value: '' %><br/>
    </div>

    <div >
      <%= f.number_field :amount, class: "form-control", placeholder: "Amount" %><br/>
    </div>

    <div>
      <%= f.label "Please select a category" %>
      <%= f.collection_select :category_id, current_user.categories, :id, :name, { include_blank: "None" }, required: true %>
    </div><br/><br/>

    <div >
      <%= f.submit "Save", class: 'btn add-cat' %>
    </div>
  <% end %>
</div>

<div class="container">
  <% if @categories.empty? %>
    <p>Category lists is empty, please add a new category to begin.</p>
  <% else %>
    <% @categories.each do |category| %>
      <%= link_to expense_index_path({ :category_id => category.id }), class: 'cat_id' do %>

        <div class="card mb-4">
          <div >
            <img src="<%= category.icon %>" alt="<%= category.name%> image">
            <div>
              <h5> <%= category.name.capitalize %> </h5>
              <p ><%= category.created_at.strftime('%a %d %b, %Y')%> </p>
            </div>
            <h5> <%= number_to_currency(category.expenses.sum(:amount), unit:"â‚¦") %> </h5>

          </div>

        </div>
      <% end %>
    <% end %>
    </div>
  <% end %>
  <div>
    <%= link_to 'Add new Category', new_user_category_path(current_user), class: "btn new-category" %>
  </div>